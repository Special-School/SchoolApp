<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/setting_btn1"
            style="@style/Outline"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#F5FFE5"
            android:text="@string/info_1"
            android:textColor="#479F74"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setting_btn2"
            style="@style/Outline"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#F5FFE5"
            android:text="@string/info_2"
            android:textColor="#479F74"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setting_btn3"
            style="@style/Outline"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#F5FFE5"
            android:text="@string/info_3"
            android:textColor="#479F74"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setting_btn4"
            style="@style/Outline"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#F5FFE5"
            android:text="@string/info_4"
            android:textColor="#479F74"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setting_btn5"
            style="@style/Outline"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#F5FFE5"
            android:text="@string/info_5"
            android:textColor="#479F74"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
