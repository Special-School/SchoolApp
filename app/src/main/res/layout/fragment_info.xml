<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/setting_btn1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="서비스 이용 약관"
            android:textColor="#00D8FF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/setting_btn2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="위치 기반 서비스 이용 약관"
            android:textColor="#00D8FF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/setting_btn3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="정보 제공처"
            android:textColor="#00D8FF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/setting_btn4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="버전 정보"
            android:textColor="#00D8FF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/setting_btn5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="개발자 정보"
            android:textColor="#00D8FF"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
