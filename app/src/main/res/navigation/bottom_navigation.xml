<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.specialschool.schoolapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.specialschool.schoolapp.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/to_school_detail"
            app:destination="@+id/navigation_school_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_school_detail"
        android:name="com.specialschool.schoolapp.ui.search.SearchDetailFragment"
        tools:layout="@layout/fragment_search_detail"/>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.specialschool.schoolapp.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
